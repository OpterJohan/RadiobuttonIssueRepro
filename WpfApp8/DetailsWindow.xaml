<Window x:Class="WpfApp8.Details"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp8"
        mc:Ignorable="d"
        Title="Details" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <RadioButton GroupName="MyGroup" IsChecked="{Binding Option1}">Option 1</RadioButton>
            <RadioButton GroupName="MyGroup" >Option 2</RadioButton>
            <TextBlock Text="{Binding Option1}" />
        </StackPanel>
    </Grid>
</Window>
